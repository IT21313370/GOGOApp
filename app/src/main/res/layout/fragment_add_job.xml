<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddJob">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:padding="5dp"
        android:text="My Job List"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textColor="@color/grey"/>



    <Button
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:id="@+id/add_new_job"
        android:background="@drawable/baseline_add_circle_24"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="bottom|end" />

    <Button
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:id="@+id/updateJob"
        android:background="@drawable/baseline_update_24"
        android:padding="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="80dp"
        android:layout_gravity="bottom|end" />

    <Button
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:id="@+id/deleteJob"
        android:background="@drawable/baseline_delete_24"
        android:padding="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="140dp"
        android:layout_gravity="bottom|end" />


    <Button
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:id="@+id/viewJob"
        android:background="@drawable/baseline_preview_24"
        android:padding="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="200dp"
        android:layout_gravity="bottom|end" />

</FrameLayout>