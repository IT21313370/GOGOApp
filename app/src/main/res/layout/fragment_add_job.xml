<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddJob">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/toolbarRl"
        android:background="@drawable/shape_toolbar01">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/iconIv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:src="@drawable/logo3d"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iconIv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Manage My jobs"
            android:textColor="@color/vividBlue"
            android:textSize="28sp"/>

    </RelativeLayout>



<!--    <TextView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="30dp"-->
<!--        android:padding="5dp"-->
<!--        android:text="My Job List"-->
<!--        android:id="@+id/jobPg_title"-->
<!--        android:textSize="14sp"-->
<!--        android:textStyle="bold"-->
<!--        android:layout_marginTop="50dp"-->
<!--        android:textAlignment="center"-->
<!--        android:textColor="@color/grey"/>-->



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="+ Add Job"
        android:padding="16dp"
        android:id="@+id/add_new_job"
        android:background="@drawable/shape_button01"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/viewJob" />






    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="260dp"
        android:text="View Job List"
        android:id="@+id/viewJob"
        android:background="@drawable/shape_button01"

        android:padding="16dp"
        android:layout_marginEnd="10dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/baseline_add_business_grey"
        android:layout_below="@id/add_new_job"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>

</FrameLayout>