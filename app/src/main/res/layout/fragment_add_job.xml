<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddJob">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:padding="5dp"
        android:text="My Job List"
        android:id="@+id/jobPg_title"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textColor="@color/grey"/>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="+ Add Job"
        android:padding="16dp"
        android:id="@+id/add_new_job"
        android:background="@drawable/shape_button01"
        android:layout_marginEnd="10dp"
        android:layout_below="@id/updateJob" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="Update Jobs"
        android:id="@+id/updateJob"
        android:background="@drawable/shape_button01"
        android:padding="16dp"
        android:layout_below="@id/deleteJob"
        android:layout_marginEnd="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="Delete jobs"
        android:id="@+id/deleteJob"
        android:layout_below="@+id/viewJob"
        android:background="@drawable/shape_button01"
        android:padding="16dp" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="View Job List"
        android:id="@+id/viewJob"
        android:background="@drawable/shape_button01"
        android:layout_below="@+id/jobPg_title"
        android:padding="16dp"
        android:layout_marginEnd="10dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/baseline_add_business_grey"
        android:layout_below="@id/add_new_job"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>

</FrameLayout>