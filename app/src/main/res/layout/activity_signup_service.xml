<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivityService">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/signupText"
                android:text="Signup"
                android:layout_gravity="left|top"
                android:layout_marginStart="20dp"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:textSize="34sp"
                android:textStyle="bold"
                android:textColor="@color/vividBlue"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="0dp"
                android:padding="20dp">

                <EditText
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:id="@+id/nameEt"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/vividblue_border"
                    android:padding="8dp"
                    android:hint="Name"
                    android:textColorHint="@color/grey01"
                    android:drawableLeft="@drawable/baseline_person_vividblue"
                    android:drawablePadding="8dp"
                    android:textColor="@color/black"/>




                <EditText
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:id="@+id/emailEt"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/vividblue_border"
                    android:padding="8dp"
                    android:hint="Email"
                    android:textColorHint="@color/grey01"
                    android:drawableLeft="@drawable/baseline_email_24"
                    android:drawablePadding="8dp"
                    android:textColor="@color/grey"/>

                <EditText
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:id="@+id/passwordEt"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/vividblue_border"
                    android:padding="8dp"
                    android:hint="Password"
                    android:textColorHint="@color/grey01"
                    android:drawableLeft="@drawable/baseline_lock_24"
                    android:drawablePadding="8dp"
                    android:textColor="@color/grey"/>

                <EditText
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:id="@+id/cPasswordEt"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/vividblue_border"
                    android:padding="8dp"
                    android:hint="Confirm Password"
                    android:textColorHint="@color/grey01"
                    android:drawableLeft="@drawable/baseline_password_24"
                    android:drawablePadding="8dp"
                    android:textColor="@color/grey"/>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:padding="20dp">

                    <CheckBox
                        android:id="@+id/agree_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:checked="false"/>

                    <TextView
                        android:id="@+id/agree_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="16sp"
                        android:textColor="@color/grey"
                        android:text="I agree to terms and condtions"/>



                </LinearLayout>


                <Button
                    android:layout_width="350dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="30dp"
                    android:text="SignUp"
                    android:id="@+id/registerBtn"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    app:cornerRadius="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/loginPgBtn"
                    android:text="@string/already_an_user_login"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    android:textColor="@color/vividBlue"/>





            </LinearLayout>


        </LinearLayout>




    </ScrollView>
















</RelativeLayout>