<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewJobDActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:id="@+id/toolbarRl"
        android:background="@drawable/shape_toolbar01">

        <!--Back Button-->
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backBtn"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:src="@drawable/baseline_arrow_back_ios_24"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/iconIv"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/backBtn"
            android:src="@drawable/logo3d"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iconIv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Add a new Job"
            android:textColor="@color/vividBlue"
            android:textSize="28sp"/>

    </RelativeLayout>



    <!--Input Job-->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/categoryTil"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="230dp"
        app:hintEnabled="false">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/jobEt"
            android:background="@drawable/shape_edittxt01"
            android:drawableStart="@drawable/baseline_topic_24"
            android:drawablePadding="10dp"
            android:hint="Job Title"
            android:inputType="textPersonName|textCapSentences"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey01"/>

    </com.google.android.material.textfield.TextInputLayout>



    <!--Input location-->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/locationTil"
        android:layout_below="@+id/categoryTil"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="-40dp"
        app:hintEnabled="false">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/locationEt"
            android:layout_marginTop="50dp"
            android:background="@drawable/shape_edittxt01"
            android:drawableStart="@drawable/baseline_location_on_24"
            android:drawablePadding="10dp"
            android:hint="Location"
            android:inputType="textPersonName|textCapSentences"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey02"/>

    </com.google.android.material.textfield.TextInputLayout>

    <!--Input fname-->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fNameTil"
        android:layout_marginStart="30dp"
        android:layout_below="@+id/locationTil"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="-40dp"
        app:hintEnabled="false">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fNameEt"
            android:layout_marginTop="50dp"
            android:background="@drawable/shape_edittxt01"
            android:drawableStart="@drawable/baseline_person_grey"
            android:drawablePadding="10dp"
            android:hint="First Name"
            android:inputType="textPersonName|textCapSentences"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey02"/>

    </com.google.android.material.textfield.TextInputLayout>

    <!--Input lname-->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lNameTil"
        android:layout_marginStart="30dp"
        android:layout_below="@+id/fNameTil"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="-40dp"
        app:hintEnabled="false">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lNameEt"
            android:layout_marginTop="50dp"
            android:background="@drawable/shape_edittxt01"
            android:drawableStart="@drawable/baseline_person_grey"
            android:drawablePadding="10dp"
            android:hint="Last Name"
            android:inputType="textPersonName|textCapSentences"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey02"/>

    </com.google.android.material.textfield.TextInputLayout>

    <!--Input fname-->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/feeTil"
        android:layout_marginStart="30dp"
        android:layout_below="@+id/lNameTil"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="-40dp"
        app:hintEnabled="false">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/feeEt"
            android:layout_marginTop="50dp"
            android:background="@drawable/shape_edittxt01"
            android:drawableStart="@drawable/baseline_attach_money_24"
            android:drawablePadding="10dp"
            android:hint="Charges"
            android:inputType="textPersonName|textCapSentences"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey02"/>

    </com.google.android.material.textfield.TextInputLayout>

    <!--Input fname-->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/actHrsTil"
        android:layout_marginStart="30dp"
        android:layout_below="@+id/feeTil"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="-40dp"
        app:hintEnabled="false">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/actHrsEt"
            android:layout_marginTop="50dp"
            android:background="@drawable/shape_edittxt01"
            android:drawableStart="@drawable/baseline_access_time_24"
            android:drawablePadding="10dp"
            android:hint="Active Hours"
            android:inputType="textPersonName|textCapSentences"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey02"/>

    </com.google.android.material.textfield.TextInputLayout>

    <!--Input fname-->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/descriptionTil"
        android:layout_marginStart="30dp"
        android:layout_below="@+id/actHrsTil"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="-40dp"
        app:hintEnabled="false">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/descriptionEt"
            android:layout_marginTop="50dp"
            android:background="@drawable/shape_edittxt01"
            android:drawableStart="@drawable/baseline_description_24"
            android:drawablePadding="10dp"
            android:hint="Description/ Experience"
            android:inputType="textPersonName|textCapSentences"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey02"/>

    </com.google.android.material.textfield.TextInputLayout>





    <!--Add Category Button-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/submitBtn"
        android:layout_below="@+id/descriptionTil"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_button01"
        android:text="Submit"
        android:textColor="@color/white"/>




</RelativeLayout>