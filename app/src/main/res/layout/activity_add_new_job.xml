<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewJobActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="60dp"
            android:layout_gravity="center_horizontal"
            android:padding="20dp">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/addJobTitle"
                android:background="@drawable/vividblue_border"
                android:layout_marginTop="20dp"
                android:hint="Job Title"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="start|center_vertical"
                android:padding="16dp"
                android:textColor="@color/vividBlue"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/addJobFName"
                android:background="@drawable/vividblue_border"
                android:layout_marginTop="20dp"
                android:hint="First name"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="start|center_vertical"
                android:padding="16dp"
                android:textColor="@color/vividBlue"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/addJobLName"
                android:background="@drawable/vividblue_border"
                android:layout_marginTop="20dp"
                android:hint="Last Name"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="start|center_vertical"
                android:padding="16dp"
                android:textColor="@color/vividBlue"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/addJobFee"
                android:background="@drawable/vividblue_border"
                android:layout_marginTop="20dp"
                android:hint="Charges"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="start|center_vertical"
                android:padding="16dp"
                android:textColor="@color/vividBlue"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/addJobActiveHrs"
                android:background="@drawable/vividblue_border"
                android:layout_marginTop="20dp"
                android:hint="Active Hours"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="start|center_vertical"
                android:padding="16dp"
                android:textColor="@color/vividBlue"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/addJobLocation"
                android:background="@drawable/vividblue_border"
                android:layout_marginTop="20dp"
                android:hint="Location"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="start|center_vertical"
                android:padding="16dp"
                android:textColor="@color/vividBlue"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/addJobExperience"
                android:background="@drawable/vividblue_border"
                android:layout_marginTop="20dp"
                android:hint="Experience"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="start|center_vertical"
                android:padding="16dp"
                android:textColor="@color/vividBlue"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/addJobDescription"
                android:background="@drawable/vividblue_border"
                android:layout_marginTop="20dp"
                android:hint="Description"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="start|center_vertical"
                android:padding="16dp"
                android:textColor="@color/vividBlue"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/saveButton"
                android:text="save"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cornerRadius="20dp"/>




        </LinearLayout>



    </ScrollView>





</ScrollView>